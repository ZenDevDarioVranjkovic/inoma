<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
  <policies>

    <policy id="script-src">
      <values>
        <value id="trusted-domain" type="host">https://static.elfsight.com/</value>
      </values>
    </policy>

    <policy id="connect-src">
      <values>
        <value id="elfsight-core-service" type="host">https://core.service.elfsight.com/</value>
      </values>
    </policy>

    <policy id="script-src">
      <values>
        <!-- Add Facebook domains to the script-src directive -->
        <value id="facebook" type="host">https://connect.facebook.net/</value>
        <value id="facebook-2" type="host">https://www.facebook.com/</value>
      </values>
    </policy>
    
    <policy id="img-src">
      <values>
        <!-- Add Facebook domains to the img-src directive -->
        <value id="facebook-img" type="host">https://www.facebook.com/</value>
        <value id="facebook-img-2" type="host">https://connect.facebook.net/</value>
      </values>
    </policy>

  </policies>
</csp_whitelist>